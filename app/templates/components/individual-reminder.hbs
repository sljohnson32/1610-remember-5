<div class='active indiv-reminder-display'>
  {{#if model.isEditable}}

  <!-- <input value={{model.title}} /> -->
  <button>Save</button>

  {{else}}

    <h1>{{model.title}}</h1>
    <p>{{model.date}}</p>
    <p>{{model.notes}}</p>

    {{#link-to 'reminders.reminder.edit' model.id}}
    <button class='btn edit-reminder-btn' {{action 'toggleEdit' on='click' }}>Edit</button>
    {{/link-to}}

  {{/if}}

</div>

